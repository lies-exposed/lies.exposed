{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react-jsx",
    "noEmit": false,
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "../../node_modules/@types",
      "typings"
    ],
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    // "isolatedModules": true,
    "paths": {
      "@client/*": ["./client/*"],
      "@econnessione/core/*": ["../../../packages/@econnessione/core/src/*"],
      "@econnessione/shared/*": [
        "../../../packages/@econnessione/shared/src/*"
      ],
      "@econnessione/ui/*": ["../../../packages/@econnessione/ui/src/*"]
    }
  },
  "include": ["./src", "./typings"],
  "references": [
    {
      "path": "../../packages/@econnessione/ui"
    },
    {
      "path": "../../packages/@econnessione/shared"
    },
    {
      "path": "../../packages/@econnessione/core"
    }
  ],
  "exclude": ["node_modules", "build"]
}
