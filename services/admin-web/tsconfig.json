{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react-jsx",
    "noEmit": false,
    "allowJs": true,
    "strict": false,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "../../node_modules/@types",
      "../../packages/@liexp/shared/typings",
      "typings"
    ],
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "paths": {
      "@client/*": ["./client/*"],
      "@liexp/core/*": ["../../../packages/@liexp/core/src/*"],
      "@liexp/shared/*": [
        "../../../packages/@liexp/shared/src/*"
      ],
      "@liexp/ui/*": ["../../../packages/@liexp/ui/src/*"]
    }
  },
  "include": ["./src", "./typings"],
  "references": [
    {
      "path": "../../packages/@liexp/ui"
    },
    {
      "path": "../../packages/@liexp/shared"
    },
    {
      "path": "../../packages/@liexp/core"
    }
  ],
  "exclude": ["node_modules", "build"]
}
