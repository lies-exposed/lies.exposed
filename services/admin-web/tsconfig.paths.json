{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "noEmit": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "./typings"],
    "baseUrl": "./src",
    "paths": {
      "@client/*": ["./client/*"],
      "@econnessione/core/*": ["../../../packages/@econnessione/core/src/*"],
      "@econnessione/shared/*": [
        "../../../packages/@econnessione/shared/src/*"
      ],
      "@econnessione/ui/*": ["../../../packages/@econnessione/ui/src/*"]
    }
  },
  "references": [
    {
      "path": "../../packages/@econnessione/ui"
    },
    {
      "path": "../../packages/@econnessione/shared"
    },
    {
      "path": "../../packages/@econnessione/core"
    }
  ]
}
