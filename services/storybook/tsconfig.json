{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2023",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "jsx": "react",
    "noEmit": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "lib": ["dom", "ES2023", "DOM.Iterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types", "./typings"],
    "baseUrl": "./",
    "rootDir": "./",
    "isolatedModules": true
  },
  "include": [".storybook/*", "src", "typings"],
  "exclude": ["./node_modules", "build", "public", "eslint.config.js"],
  "references": [
    {
      "path": "../../packages/@liexp/core"
    },
    {
      "path": "../../packages/@liexp/shared"
    },
    {
      "path": "../../packages/@liexp/ui"
    },
    {
      "path": "../../packages/@liexp/test"
    },
  ]
}
