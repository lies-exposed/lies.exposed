{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./build",
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "rootDir": "./",
    "lib": ["DOM", "ES2022"],
    "tsBuildInfoFile": "build/.tsbuildinfo",
    "target": "ES6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "types": [
      "../../node_modules/vitest/globals",
    ],
    "paths": {
      "#common/*": ["common/*"],
      "#flows/*": ["flows/*"]
    }
  },
  "include": [
    "./src",
    "./typings",
    "../../packages/@liexp/shared/typings",
    "../../packages/@liexp/backend/typings",
    "./scripts",
    "./test",
  ],
  "exclude": ["**/build", "**/lib"],
  "references": [
    { "path": "../../packages/@liexp/core" },
    { "path": "../../packages/@liexp/shared" },
    { "path": "../../packages/@liexp/backend" },
    { "path": "../../packages/@liexp/ui" }
  ]
}
