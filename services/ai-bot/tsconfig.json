{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./build",
    "baseUrl": "./src",
    "rootDir": "./",
    "lib": ["DOM", "ESNext"],
    "tsBuildInfoFile": "build/.tsbuildinfo",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": false,
    "types": ["../../node_modules/vitest/globals"],
    "paths": {
      "#common/*": ["./common/*"],
      "#flows/*": ["./flows/*"],
      "#services/*": ["./services/*"]
    }
  },
  "include": ["./src", "./typings", "./scripts", "./test"],
  "exclude": ["**/build", "**/lib"],
  "references": [
    { "path": "../../packages/@liexp/core" },
    { "path": "../../packages/@liexp/shared" },
    { "path": "../../packages/@liexp/backend" }
  ]
}
