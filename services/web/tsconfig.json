{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "noEmit": false,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "typeRoots": [
      "../../node_modules/@types",
      "node_modules/@types",
      "typings"
    ],
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "tsBuildInfoFile": "build/.tsbuildinfo",
    "baseUrl": "./src",
    "paths": {
      "@containers/*": ["./client/containers/*"],
      "@liexp/core/*": ["../../../packages/@liexp/core/src/*"],
      "@liexp/shared/*": ["../../../packages/@liexp/shared/src/*"],
      "@liexp/ui/*": ["../../../packages/@liexp/ui/src/*"]
    }
  },
  "include": ["./src", "./typings"],
  "ts-node": {
    "esm": true,
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true
    }
  },
  "references": [
    {
      "path": "../../packages/@liexp/core"
    },
    {
      "path": "../../packages/@liexp/shared"
    },
    {
      "path": "../../packages/@liexp/ui"
    }
  ]
}
