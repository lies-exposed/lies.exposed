{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "noEmit": false,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "typeRoots": [
      "../../node_modules/@types",
      "node_modules/@types",
      "typings"
    ],
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    // "isolatedModules": true,
    "tsBuildInfoFile": "build/.tsbuildinfo",
    "baseUrl": "./src",
    "paths": {
      "@containers/*": ["./client/containers/*"],
      "@econnessione/core/*": ["../../../packages/@econnessione/core/src/*"],
      "@econnessione/shared/*": [
        "../../../packages/@econnessione/shared/src/*"
      ],
      "@econnessione/ui/*": ["../../../packages/@econnessione/ui/src/*"]
    }
  },
  "include": ["./src", "./typings"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "references": [
    {
      "path": "../../packages/@econnessione/core"
    },
    {
      "path": "../../packages/@econnessione/shared"
    },
    {
      "path": "../../packages/@econnessione/ui"
    }
  ]
}
