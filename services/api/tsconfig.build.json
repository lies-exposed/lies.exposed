{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "./src",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "tsBuildInfoFile": "build/.build.tsbuildinfo",
    "declaration": true,
    "types": [
      "../../packages/@liexp/shared/typings/page-metadata-parser",
      "../../packages/@liexp/backend/typings/express",
    ],
  },
  "include": [
    "./src",
    "./typings",
  ],
  "exclude": [
    "**/__tests__/**",
    "*/__mocks__/**",
    "./test/**",
    "**/*.spec.ts"
  ]
}