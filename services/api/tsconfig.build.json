{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "./src",
    "rootDir": "./src",
    "jsx": "react",
    "composite": true,
    "tsBuildInfoFile": "build/tsconfig.build.tsbuildinfo",
    "types": [
      "express"
    ],
    "typeRoots": [
      "./typings",
      "../../packages/@liexp/backend/typings",
      "../../packages/@liexp/shared/typings",
    ],
    "declaration": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "include": ["./src"],
  "exclude": ["**/__tests__/**", "*/__mocks__/**", "./test/**"]
}
