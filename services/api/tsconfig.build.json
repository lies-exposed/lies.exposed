{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "./src",
    "rootDir": "./src",
    "jsx": "react",
    "tsBuildInfoFile": "build/.tsbuildinfo",
    "typeRoots": [
      "./typings",
      "node_modules/@types",
      "../../packages/@liexp/shared/typings",
      "../../node_modules/@types"
    ],
    "declaration": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "references": [
    {
      "path": "../../packages/@liexp/core"
    },
    {
      "path": "../../packages/@liexp/shared"
    },
    {
      "path": "../../packages/@liexp/ui"
    }
  ],
  "include": ["./src"],
  "exclude": ["**/__tests__/**", "*/__mocks__/**", "./test/**"]
}
