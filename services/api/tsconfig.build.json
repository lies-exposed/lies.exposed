{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "./src",
    "rootDir": "./src",
    "jsx": "react",
    "tsBuildInfoFile": "build/.tsbuildinfo",
    "typeRoots": [
      "./typings",
      "node_modules/@types",
      "../../packages/@liexp/shared/typings",
      "../../node_modules/@types"
    ],
    "declaration": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "include": ["./src"],
  "exclude": ["**/__tests__/**", "*/__mocks__/**", "./test/**"],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
  }
}
