{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "./src",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "tsBuildInfoFile": "build/tsconfig.build.tsbuildinfo",
    "typeRoots": [
      "./typings",
      "../../packages/@liexp/backend/typings",
      "../../packages/@liexp/shared/typings"
    ],
    "declaration": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "include": ["./src"],
  "exclude": ["**/__tests__/**", "*/__mocks__/**", "./test/**"],
  "references": [
    { "path": "../../packages/@liexp/shared" },
    { "path": "../../packages/@liexp/backend" },
    { "path": "../../packages/@liexp/ui" }
  ]
}
