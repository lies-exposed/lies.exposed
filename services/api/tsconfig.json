{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./build",
    "baseUrl": "./src",
    "jsx": "react",
    "rootDir": "./",
    "tsBuildInfoFile": "build/.tsbuildinfo",
    "typeRoots": [
      "./typings",
      "node_modules/@types",
      "../../packages/@liexp/shared/typings",
      "../../node_modules/@types"
    ],
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@io/*": ["io/*"],
      "@entities/*": ["entities/*"],
      "@flows/*": ["flows/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "references": [
    {
      "path": "../../packages/@liexp/test"
    },
    {
      "path": "../../packages/@liexp/shared"
    },
    {
      "path": "../../packages/@liexp/core"
    }
  ],
  "include": ["./bin", "./src", "./scripts", "./test"],
  "exclude": ["**/build", "**/lib"],
  "ts-node": {
    "transpileOnly": true,
    "require": ["dotenv/config", "tsconfig-paths/register"],
    "logError": true,
    "compilerOptions": {
      "module": "CommonJS"
    },
    "files": true
  }
}
