{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./build",
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "rootDir": "./",
    "lib": ["DOM", "ES2022"],
    "tsBuildInfoFile": "build/.tsbuildinfo",
    "types": [
      "vitest/globals"
    ],
    "typeRoots": [
      "./typings",
      "../../node_modules/@types",
      "../../packages/@liexp/backend/typings",
      "../../packages/@liexp/shared/typings"
    ],
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "#app/*": ["app/*"],
      "#context/*": ["context/*"],
      "#io/*": ["io/*"],
      "#entities/*": ["entities/*"],
      "#flows/*": ["flows/*"],
      "#providers/*": ["providers/*"],
      "#queries/*": ["queries/*"],
      "#routes/*": ["routes/*"],
      "#utils/*": ["utils/*"]
    }
  },
  "include": [
    "./bin",
    "./src",
    "./scripts",
    "./test",
    "eslint.config.js",
    "vitest.workspace.ts"
  ],
  "exclude": ["**/build", "**/lib"],
  "references": [
    { "path": "../../packages/@liexp/backend" },
    { "path": "../../packages/@liexp/shared" },
    { "path": "../../packages/@liexp/ui" }
  ]
}
