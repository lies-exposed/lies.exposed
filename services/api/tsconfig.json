{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "./src",
    "jsx": "react",
    "rootDir": "./",
    "tsBuildInfoFile": "build/.tsbuildinfo",
    "typeRoots": [
      "./typings",
      "node_modules/@types",
      "../../packages/@liexp/shared/typings",
      "../../node_modules/@types"
    ],
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@io/*": ["io/*"],
      "@entities/*": ["entities/*"],
      "@flows/*": ["flows/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
      "@liexp/core/*": ["../../../packages/@liexp/core/src/*"],
      "@liexp/shared/*": ["../../../packages/@liexp/shared/src/*"],
      "@liexp/test/*": ["../../../packages/@liexp/test/src/*"]
    }
  },
  "references": [
    {
      "path": "../../packages/@liexp/test"
    },
    {
      "path": "../../packages/@liexp/shared"
    },
    {
      "path": "../../packages/@liexp/core"
    }
  ],
  "include": ["./src", "./scripts", "./test"],
  "exclude": ["build", "**/lib"],
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "require": ["tsconfig-paths/register", "dotenv/config"]
  }
}
