    "outDir": "./build",
    "baseUrl": "./src",
    "rootDir": "./src",
    "lib": ["ESNext", "DOM"],
    "tsBuildInfoFile": "build/.tsbuildinfo",
    "typeRoots": [
      "./src/typings",
    ],
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
  },
  "references": [
