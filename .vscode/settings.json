{
  "jest.jestCommandLine": "yarn test",
  "jest.rootPath": "./",
  "jest.autoRun": {
    "watch": false
  },
  "jest.showCoverageOnLoad": true,
  "jest.testExplorer": {
    "enabled": true
  },
  "jest.debugMode": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/lib": true,
    ".yarn": true
  }
}
