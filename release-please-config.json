{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "node",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "include-v-in-tag": true,
  "include-component-in-tag": false,
  "changelog-sections": [
    { "type": "feat", "section": "Features" },
    { "type": "fix", "section": "Bug Fixes" },
    { "type": "perf", "section": "Performance Improvements" },
    { "type": "revert", "section": "Reverts" },
    { "type": "docs", "section": "Documentation" },
    { "type": "style", "section": "Styles" },
    { "type": "chore", "section": "Miscellaneous Chores", "hidden": true },
    { "type": "refactor", "section": "Code Refactoring" },
    { "type": "test", "section": "Tests", "hidden": true },
    { "type": "build", "section": "Build System", "hidden": true },
    { "type": "ci", "section": "Continuous Integration", "hidden": true }
  ],
  "packages": {
    ".": {
      "release-type": "node",
      "changelog-path": "CHANGELOG.md"
    },
    "packages/@liexp/backend": {
      "release-type": "node",
      "changelog-path": "packages/@liexp/backend/CHANGELOG.md"
    },
    "packages/@liexp/core": {
      "release-type": "node",
      "changelog-path": "packages/@liexp/core/CHANGELOG.md"
    },
    "packages/@liexp/shared": {
      "release-type": "node",
      "changelog-path": "packages/@liexp/shared/CHANGELOG.md"
    },
    "packages/@liexp/ui": {
      "release-type": "node",
      "changelog-path": "packages/@liexp/ui/CHANGELOG.md"
    },
    "services/api": {
      "release-type": "node",
      "changelog-path": "services/api/CHANGELOG.md"
    },
    "services/worker": {
      "release-type": "node",
      "changelog-path": "services/worker/CHANGELOG.md"
    },
    "services/ai-bot": {
      "release-type": "node",
      "changelog-path": "services/ai-bot/CHANGELOG.md"
    },
    "services/web": {
      "release-type": "node",
      "changelog-path": "services/web/CHANGELOG.md"
    },
    "services/admin-web": {
      "release-type": "node",
      "changelog-path": "services/admin-web/CHANGELOG.md"
    },
    "services/agent": {
      "release-type": "node",
      "changelog-path": "services/agent/CHANGELOG.md"
    }
  }
}
