{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    ".": {
      "release-type": "node",
      "package-name": "lies.exposed",
      "include-v-in-tag": false
    },
    "packages/@liexp/backend": {
      "release-type": "node",
      "package-name": "@liexp/backend",
      "include-v-in-tag": false
    },
    "packages/@liexp/core": {
      "release-type": "node", 
      "package-name": "@liexp/core",
      "include-v-in-tag": false
    },
    "packages/@liexp/shared": {
      "release-type": "node",
      "package-name": "@liexp/shared",
      "include-v-in-tag": false
    },
    "packages/@liexp/test": {
      "release-type": "node",
      "package-name": "@liexp/test",
      "include-v-in-tag": false
    },
    "packages/@liexp/ui": {
      "release-type": "node",
      "package-name": "@liexp/ui",
      "include-v-in-tag": false
    },
    "services/admin-web": {
      "release-type": "node",
      "package-name": "@liexp/admin-web",
      "include-v-in-tag": false
    },
    "services/ai-bot": {
      "release-type": "node",
      "package-name": "@liexp/ai-bot",
      "include-v-in-tag": false
    },
    "services/api": {
      "release-type": "node", 
      "package-name": "@liexp/api",
      "include-v-in-tag": false
    },
    "services/web": {
      "release-type": "node",
      "package-name": "@liexp/web",
      "include-v-in-tag": false
    },
    "services/worker": {
      "release-type": "node",
      "package-name": "@liexp/worker",
      "include-v-in-tag": false
    },
    "services/agent": {
      "release-type": "node",
      "package-name": "@liexp/agent",
      "include-v-in-tag": false
    },
    "services/data": {
      "release-type": "node",
      "package-name": "@liexp/data",
      "include-v-in-tag": false
    },
    "services/storybook": {
      "release-type": "node",
      "package-name": "@liexp/storybook",
      "include-v-in-tag": false
    }
  },
  "bootstrap-sha": "HEAD",
  "group-pull-request-title-pattern": "chore: release ${version}",
  "separate-pull-requests": false,
  "tag-separator": "@",
  "include-component-in-tag": false,
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": false,
  "draft": false,
  "prerelease": false,
  "changelog-sections": [
    {"type": "feat", "section": "Features"},
    {"type": "fix", "section": "Bug Fixes"},
    {"type": "chore", "section": "Miscellaneous", "hidden": true},
    {"type": "docs", "section": "Documentation", "hidden": true},
    {"type": "style", "section": "Styles", "hidden": true},
    {"type": "refactor", "section": "Code Refactoring", "hidden": true},
    {"type": "perf", "section": "Performance Improvements"},
    {"type": "test", "section": "Tests", "hidden": true},
    {"type": "build", "section": "Build System", "hidden": true},
    {"type": "ci", "section": "Continuous Integration", "hidden": true}
  ]
}