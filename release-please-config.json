{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    ".": {
      "component": "lies.exposed",
      "exclude-paths": [
        "packages",
        "services"
      ],
      "include-scope": [
        "release",
        "workspace",
        "deps",
        "dev-deps"
      ],
      "always-update": true
    },
    "packages/@liexp/backend": {
      "component": "@liexp/backend",
      "skip-github-release": true,
      "include-scope": [
        "backend"
      ]
    },
    "packages/@liexp/core": {
      "component": "@liexp/core",
      "skip-github-release": true,
      "include-scope": [
        "core"
      ]
    },
    "packages/@liexp/eslint-config": {
      "component": "@liexp/eslint-config",
      "skip-github-release": true,
      "include-scope": [
        "eslint-config"
      ]
    },
    "packages/@liexp/io": {
      "component": "@liexp/io",
      "skip-github-release": true,
      "include-scope": [
        "io"
      ]
    },
    "packages/@liexp/shared": {
      "component": "@liexp/shared",
      "skip-github-release": true,
      "include-scope": [
        "shared"
      ]
    },
    "packages/@liexp/test": {
      "component": "@liexp/test",
      "skip-github-release": true,
      "include-scope": [
        "test"
      ]
    },
    "packages/@liexp/ui": {
      "component": "@liexp/ui",
      "skip-github-release": true,
      "include-scope": [
        "ui"
      ]
    },
    "services/admin": {
      "component": "admin",
      "skip-github-release": true,
      "include-scope": [
        "admin"
      ]
    },
    "services/ai-bot": {
      "component": "ai-bot",
      "skip-github-release": true,
      "include-scope": [
        "ai-bot"
      ]
    },
    "services/api": {
      "component": "api",
      "skip-github-release": true,
      "include-scope": [
        "api"
      ]
    },
    "services/web": {
      "component": "web",
      "skip-github-release": true,
      "include-scope": [
        "web"
      ]
    },
    "services/worker": {
      "component": "worker",
      "skip-github-release": true,
      "include-scope": [
        "worker"
      ]
    },
    "services/agent": {
      "component": "agent",
      "skip-github-release": true,
      "include-scope": [
        "agent"
      ]
    },
    "services/storybook": {
      "component": "@liexp/storybook",
      "skip-github-release": true,
      "include-scope": [
        "storybook"
      ]
    }
  },
  "bootstrap-sha": "77c2bfdc74c216006260f7e6347e7d8a84f4baaa",
  "group-pull-request-title-pattern": "chore: release ${component} ${version}",
  "separate-pull-requests": false,
  "tag-separator": "@",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": false,
  "include-v-in-tag": false,
  "draft": false,
  "initial-version": "0.1.0",
  "release-search-depth": 10,
  "changelog-type": "default",
  "plugins": [
    "node-workspace",
    {
      "type": "linked-versions",
      "groupName": "monorepo",
      "components": [
        "lies.exposed",
        "@liexp/backend",
        "@liexp/core",
        "@liexp/eslint-config",
        "@liexp/io",
        "@liexp/shared",
        "@liexp/test",
        "@liexp/ui",
        "admin",
        "ai-bot",
        "api",
        "web",
        "worker",
        "agent",
        "@liexp/storybook"
      ]
    }
  ],
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Features"
    },
    {
      "type": "fix",
      "section": "Bug Fixes"
    },
    {
      "type": "chore",
      "section": "Miscellaneous"
    },
    {
      "type": "docs",
      "section": "Documentation",
      "hidden": true
    },
    {
      "type": "refactor",
      "section": "Code Refactoring",
      "hidden": true
    },
    {
      "type": "test",
      "section": "Tests",
      "hidden": true
    },
    {
      "type": "build",
      "section": "Build System",
      "hidden": true
    },
    {
      "type": "ci",
      "section": "Continuous Integration",
      "hidden": true
    }
  ]
}
