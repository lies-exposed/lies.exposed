{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    ".": {
      "component": "lies.exposed",
      "include-component-in-tag": false,
      "exclude-paths": [
        "packages",
        "services"
      ],
      "include-scope": [
        "release",
        "workspace"
      ]
    },
    "packages/@liexp/backend": {
      "component": "@liexp/backend",
      "include-scope": [
        "backend"
      ]
    },
    "packages/@liexp/core": {
      "component": "@liexp/core",
      "include-scope": [
        "core"
      ]
    },
    "packages/@liexp/shared": {
      "component": "@liexp/shared",
      "include-scope": [
        "shared"
      ]
    },
    "packages/@liexp/test": {
      "component": "@liexp/test",
      "include-scope": [
        "test"
      ]
    },
    "packages/@liexp/ui": {
      "component": "@liexp/ui",
      "include-scope": [
        "ui"
      ]
    },
    "services/admin-web": {
      "component": "admin-web",
      "include-scope": [
        "admin",
        "admin-web"
      ]
    },
    "services/ai-bot": {
      "include-scope": [
        "ai-bot"
      ],
      "component": "ai-bot"
    },
    "services/api": {
      "include-scope": [
        "api"
      ],
      "component": "api"
    },
    "services/web": {
      "include-scope": [
        "web"
      ],
      "component": "web"
    },
    "services/worker": {
      "include-scope": [
        "worker"
      ],
      "component": "worker"
    },
    "services/agent": {
      "include-scope": [
        "agent"
      ],
      "component": "agent"
    },
    "services/storybook": {
      "include-scope": [
        "storybook"
      ],
      "component": "storybook"
    }
  },
  "bootstrap-sha": "77c2bfdc74c216006260f7e6347e7d8a84f4baaa",
  "group-pull-request-title-pattern": "chore: release ${component} ${version}",
  "separate-pull-requests": false,
  "tag-separator": "@",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": false,
  "include-v-in-tag": false,
  "draft": false,
  "initial-version": "0.1.0",
  "release-search-depth": 10,
  "changelog-type": "default",
  "plugins": [
    "node-workspace"
  ],
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Features"
    },
    {
      "type": "fix",
      "section": "Bug Fixes"
    },
    {
      "type": "chore",
      "section": "Miscellaneous"
    },
    {
      "type": "docs",
      "section": "Documentation",
      "hidden": true
    },
    {
      "type": "refactor",
      "section": "Code Refactoring",
      "hidden": true
    },
    {
      "type": "test",
      "section": "Tests",
      "hidden": true
    },
    {
      "type": "build",
      "section": "Build System",
      "hidden": true
    },
    {
      "type": "ci",
      "section": "Continuous Integration",
      "hidden": true
    }
  ]
}