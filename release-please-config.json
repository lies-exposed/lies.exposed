{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "node",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "include-v-in-tag": true,
  "include-component-in-tag": true,
  "release-as": "0.1.0",
  "pull-request-title-pattern": "chore(${scope}): release ${version}",
  "changelog-sections": [
    { "type": "feat", "section": "Features" },
    { "type": "fix", "section": "Bug Fixes" },
    { "type": "revert", "section": "Reverts" },
    { "type": "docs", "section": "Documentation" },
    { "type": "chore", "section": "Miscellaneous Chores", "hidden": true },
    { "type": "refactor", "section": "Code Refactoring" },
    { "type": "test", "section": "Tests", "hidden": true },
    { "type": "build", "section": "Build System", "hidden": true },
    { "type": "ci", "section": "Continuous Integration", "hidden": true }
  ],
  "packages": {
    ".": {
      "release-type": "node",
      "component": "lies.exposed",
      "changelog-path": "CHANGELOG.md"
    },
    "packages/@liexp/backend": {
      "release-type": "node",
      "component": "backend",
      "changelog-path": "packages/@liexp/backend/CHANGELOG.md"
    },
    "packages/@liexp/core": {
      "release-type": "node",
      "component": "core",
      "changelog-path": "packages/@liexp/core/CHANGELOG.md"
    },
    "packages/@liexp/shared": {
      "release-type": "node",
      "component": "shared",
      "changelog-path": "packages/@liexp/shared/CHANGELOG.md"
    },
    "packages/@liexp/test": {
      "release-type": "node",
      "component": "test",
      "changelog-path": "packages/@liexp/test/CHANGELOG.md"
    },
    "packages/@liexp/ui": {
      "release-type": "node",
      "component": "ui",
      "changelog-path": "packages/@liexp/ui/CHANGELOG.md"
    },
    "services/api": {
      "release-type": "node",
      "component": "api",
      "changelog-path": "services/api/CHANGELOG.md"
    },
    "services/worker": {
      "release-type": "node",
      "component": "worker",
      "changelog-path": "services/worker/CHANGELOG.md"
    },
    "services/ai-bot": {
      "release-type": "node",
      "component": "ai-bot",
      "changelog-path": "services/ai-bot/CHANGELOG.md"
    },
    "services/web": {
      "release-type": "node",
      "component": "web",
      "changelog-path": "services/web/CHANGELOG.md"
    },
    "services/admin-web": {
      "release-type": "node",
      "component": "admin-web",
      "changelog-path": "services/admin-web/CHANGELOG.md"
    },
    "services/agent": {
      "release-type": "node",
      "component": "agent",
      "changelog-path": "services/agent/CHANGELOG.md"
    },
    "services/storybook": {
      "release-type": "node",
      "component": "storybook",
      "changelog-path": "services/storybook/CHANGELOG.md"
    }
  }
}
