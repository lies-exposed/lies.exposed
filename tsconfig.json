{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "commonjs",
    "target": "es5",
    "incremental": true,
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types", "packages/@econnessione/*/typings"],
    "baseUrl": ".",
    "paths": {
      "@econnessione/core/*": ["packages/@econnessione/core/src/*"],
      "@econnessione/shared/*": ["packages/@econnessione/shared/src/*"],
      "@econnessione/ui/*": ["packages/@econnessione/ui/src/*"]
    }
  },
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "./packages/@econnessione/core"
    },
    {
      "path": "./packages/@econnessione/shared"
    },
    {
      "path": "./packages/@econnessione/ui"
    }
  ]
}
