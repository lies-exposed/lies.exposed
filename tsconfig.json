{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "es6",
    "moduleResolution": "node",
    "incremental": true,
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types", "packages/@liexp/*/typings"],
    "baseUrl": ".",
    "paths": {
      "@liexp/core/*": ["packages/@liexp/core/src/*"],
      "@liexp/shared/*": ["packages/@liexp/shared/src/*"],
      "@liexp/test/*": ["packages/@liexp/test/src/*"],
      "@liexp/ui/*": ["packages/@liexp/ui/src/*"]
    }
  },
  "exclude": ["node_modules"]
}
