{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "commonjs",
    "target": "es5",
    "incremental": true,
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "lib"
  ]
}
