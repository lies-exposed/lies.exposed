{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "commonjs",
    "target": "es5",
    "incremental": true,
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types", "packages/@liexp/*/typings"],
    "baseUrl": ".",
    "paths": {
      "@liexp/core/*": ["packages/@liexp/core/src/*"],
      "@liexp/shared/*": ["packages/@liexp/shared/src/*"],
      "@liexp/ui/*": ["packages/@liexp/ui/src/*"]
    }
  },
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "./packages/@liexp/core"
    },
    {
      "path": "./packages/@liexp/shared"
    },
    {
      "path": "./packages/@liexp/ui"
    }
  ]
}
