{
  "name": "econnessione",
  "version": "0.1.0",
  "description": "Econnessione's project monorepo",
  "main": "index.js",
  "repository": "git@github.com:ascariandrea/econnessione.git",
  "author": "Andrea Ascari <dev.ascariandrea@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/@econnessione/*",
      "services/*"
    ]
  },
  "scripts": {
    "clean": "yarn workspaces foreach -p run clean",
    "build": "yarn workspaces foreach -v run build",
    "test:spec": "jest spec",
    "test:e2e": "jest e2e",
    "test": "jest",
    "core": "yarn workspace @econnessione/core",
    "shared": "yarn workspace @econnessione/shared",
    "ui": "yarn workspace @econnessione/ui",
    "api": "yarn workspace api",
    "data": "yarn workspace data",
    "web": "yarn workspace web",
    "admin-web": "yarn workspace admin-web",
    "storybook": "yarn workspace storybook",
    "docker:up": "docker-compose up --force-recreate api web admin-web space",
    "packages:build": "yarn core build && yarn shared build && yarn ui build",
    "lint": "yarn workspaces foreach run lint",
    "format": "yarn workspaces foreach run format",
    "prepare": "husky install"
  },
  "engines": {
    "yarn": ">= 3",
    "npm": "please use yarn >= 3",
    "node": ">= 14"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/prettier": "^2.4.2",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-webpack-plugin": "^3.1.1",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "jest": "^27.4.7",
    "lint-staged": "^12.1.7",
    "pinst": "^2.1.6",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0"
  },
  "packageManager": "yarn@3.1.1"
}
