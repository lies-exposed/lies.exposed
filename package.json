{
  "name": "lies.exposed",
  "version": "0.1.0",
  "description": "lies.exposed project monorepo",
  "main": "index.js",
  "repository": "git@github.com:lies.exposed/lies-exposed.git",
  "author": "Andrea Ascari <dev.ascariandrea@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/@liexp/*",
      "services/api",
      "services/admin-web",
      "services/web",
      "services/storybook"
    ]
  },
  "scripts": {
    "clean": "yarn workspaces foreach -p run clean",
    "lint": "yarn workspaces foreach -v run lint",
    "format": "yarn workspaces foreach -v run format",
    "build": "yarn workspaces foreach -v run build",
    "test:spec": "jest spec",
    "test:e2e": "NODE_ENV=test jest e2e",
    "jest": "jest",
    "core": "yarn workspace @liexp/core",
    "shared": "yarn workspace @liexp/shared",
    "test": "yarn workspace @liexp/test",
    "ui": "yarn workspace @liexp/ui",
    "api": "yarn workspace api",
    "data": "yarn workspace data",
    "web": "yarn workspace web",
    "admin-web": "yarn workspace admin-web",
    "storybook": "yarn workspace storybook",
    "docker:up": "docker-compose up --force-recreate api web admin-web space",
    "packages:build": "yarn core build && yarn shared build && yarn ui build",
    "deploy:setup": "./deploy/setup.sh",
    "post-deploy": "./deploy/post-deploy.sh",
    "prepare": "husky install"
  },
  "engines": {
    "yarn": ">= 3",
    "npm": "please use yarn >= 3",
    "node": ">= 16"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@types/prettier": "^2.7.1",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-webpack-plugin": "^3.2.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "jest": "^29.3.1",
    "lint-staged": "^13.0.3",
    "pm2": "^5.2.2",
    "prettier": "^2.7.1",
    "terser": "^5.15.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4",
    "webpack": "^5.75.0"
  },
  "packageManager": "yarn@3.2.3",
  "resolutions": {
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "react-dnd": "^15",
    "react-dnd-html5-backend": "^15",
    "terser": ">=5.14.2",
    "webpack": "^5"
  }
}
