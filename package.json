{
  "name": "lies.exposed",
  "version": "0.1.0",
  "description": "lies.exposed project monorepo",
  "main": "index.js",
  "repository": "git@github.com:lies.exposed/lies-exposed.git",
  "author": "Andrea Ascari <dev.ascariandrea@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/@liexp/*",
      "services/api",
      "services/admin-web",
      "services/web"
    ]
  },
  "scripts": {
    "clean": "yarn workspaces foreach -p run clean",
    "lint": "yarn workspaces foreach -v run lint",
    "format": "yarn workspaces foreach -v run format",
    "build": "yarn workspaces foreach -v run build",
    "test:spec": "jest spec",
    "test:e2e": "jest e2e",
    "test": "jest",
    "core": "yarn workspace @liexp/core",
    "shared": "yarn workspace @liexp/shared",
    "ui": "yarn workspace @liexp/ui",
    "api": "yarn workspace api",
    "data": "yarn workspace data",
    "web": "yarn workspace web",
    "admin-web": "yarn workspace admin-web",
    "storybook": "yarn workspace storybook",
    "docker:up": "docker-compose up --force-recreate api web admin-web space",
    "packages:build": "yarn core build && yarn shared build && yarn ui build",
    "deploy:setup": "./deploy/setup.sh",
    "post-deploy": "./deploy/post-deploy.sh",
    "prepare": "husky install"
  },
  "engines": {
    "yarn": ">= 3",
    "npm": "please use yarn >= 3",
    "node": ">= 14"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/prettier": "^2.6.0",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-webpack-plugin": "^3.1.1",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.8",
    "pinst": "^2.1.6",
    "pm2": "^5.2.0",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0"
  },
  "packageManager": "yarn@3.1.1"
}
