{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "typeRoots": [
      "./typings",
      "node_modules/@types",
      "../../../node_modules/@types"
    ],
    "declaration": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
