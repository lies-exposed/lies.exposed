{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "composite": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES5",
    "typeRoots": [
      "./typings",
      "node_modules/@types",
      "../../../node_modules/@types"
    ],
    "declaration": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
