{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "noEmit": false,
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "target": "es6",
    "module": "ESNext",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "baseUrl": "./src",
    "rootDir": "./src",
    "tsBuildInfoFile": "lib/.tsbuildinfo"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "lib"],
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../shared"
    }
  ]
}
