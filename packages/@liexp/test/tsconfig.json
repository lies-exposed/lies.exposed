{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "baseUrl": "./src",
    "rootDir": "./src",
    "tsBuildInfoFile": "lib/tsconfig.tsbuildinfo",
    "typeRoots": [
      "../../../node_modules/@types",
      "node_modules/@types",
      "typings"
    ],
    "paths": {
      "@liexp/core/*": ["../core/src/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules", "lib"],
  "references": [
    {
      "path": "../core"
    }
  ]
}
