{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "typeRoots": [
      "./typings"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "tsBuildInfoFile": "lib/.build.tsbuildinfo"
  },
  "include": ["./src", "!src/**/*.spec.ts"],
  "exclude": [
    "node_modules",
    "lib",
    "src/**/*.spec.ts",
    "test"
  ]
}
