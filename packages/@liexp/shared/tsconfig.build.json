{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "typeRoots": [
      "./typings"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {
      "@helpers/*": ["./helpers/*"],
      "@io/*": ["./io/*"],
      "@providers/*": ["./providers/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "include": ["./src", "!src/**/*.spec.ts"],
  "exclude": [
    "node_modules",
    "lib",
    "src/**/*.spec.ts"
  ]
}
