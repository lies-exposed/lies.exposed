{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "typeRoots": [
      "./typings"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "./src",
    "rootDir": "./src"
  },
  "include": ["./src", "!src/**/*.spec.ts"],
  "exclude": [
    "node_modules",
    "lib",
    "src/**/*.spec.ts",
    "test"
  ],
  "references": [
    {
      "path": "../core/tsconfig.build.json"
    },
    {
      "path": "../test/tsconfig.build.json"
    }
  ],
}
