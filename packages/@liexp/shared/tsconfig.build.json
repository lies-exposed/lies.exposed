{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "typeRoots": [
      "./typings"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "./src",
    "rootDir": "./src"
  },
  "include": ["./src", "!src/**/*.spec.ts"],
  "exclude": [
    "node_modules",
    "lib",
    "eslint.config.js",
    "src/**/*.spec.ts"
  ],
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../test"
    }
  ],
}
