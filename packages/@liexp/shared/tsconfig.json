{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    "noEmit": false,
    "composite": true,
    "incremental": true,
    "declaration": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./lib",
    "baseUrl": "./src",
    "rootDir": "./src",
    "typeRoots": [
      "../../../node_modules/@types",
      "typings"
    ],
    "tsBuildInfoFile": "lib/tsconfig.tsbuildinfo",
    "paths": {
      "@helpers/*": ["./helpers/*"],
      "@io/*": ["./io/*"],
      "@providers/*": ["./providers/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../test"
    }
  ],
  "include": [
    "../../../node_modules/vitest/globals.d.ts",
    "./src",
    "./src/**/*.json",
    ".eslintrc.js"
  ],
  "exclude": ["node_modules", "lib"]
}
