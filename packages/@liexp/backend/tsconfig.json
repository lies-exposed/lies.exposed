{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "target": "es6",
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": false,
    "composite": true,
    "incremental": true,
    "declaration": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./lib",
    "baseUrl": "./src",
    "rootDir": "./src",
    "tsBuildInfoFile": "lib/.build.tsbuildinfo"
  },
  "include": [
    "./src",
    "./typings",
    "../shared/typings",
    "./src/**/*.json"
  ],
  "exclude": ["node_modules", "lib"],
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../shared"
    }
  ],
}
