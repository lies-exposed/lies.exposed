{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    "noEmit": false,
    "composite": true,
    "incremental": true,
    "declaration": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./lib",
    "baseUrl": "./src",
    "rootDir": "./src",
    "typeRoots": ["../shared/typings", "./typings"],
    "tsBuildInfoFile": "lib/tsconfig.tsbuildinfo"
  },
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../shared"
    }
  ],
  "include": [
    "../../../node_modules/vitest/globals.d.ts",
    "./src",
    "./src/**/*.json",
    ".eslintrc.js"
  ],
  "exclude": ["node_modules", "lib"]
}
