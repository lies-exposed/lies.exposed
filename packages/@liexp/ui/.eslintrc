{
  "extends": ["../../../.eslintrc", "plugin:react/recommended"],
  "parserOptions": {
    "tsconfigRootDir": "./",
    "project": ["./tsconfig.test.json"]
  },
  "rules": {
    "react/prop-types": ["off"],
    "import/named": ["off"],
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          "@mui/material",
          "@mui/material/*/*",
          "!@mui/material/test-utils/*",
          "!@mui/material/styles"
        ]
      }
    ]
  },
  "settings": {
    "react": {
      "version": "16.12.0"
    }
  }
}
