{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    "target": "es6",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": false,
    "composite": true,
    "incremental": true,
    "declaration": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "baseUrl": "./",
    "rootDir": "./",
    "typeRoots": [
      "../shared/typings",
      "./typings"
    ],
    "tsBuildInfoFile": "lib/tsconfig.tsbuildinfo"
  },
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../shared"
    }
  ],
  "include": [
    "./src",
    "./test",
    "./typings",
    "./src/**/*.json",
    ".eslintrc.cjs"
  ],
  "exclude": ["node_modules", "lib"]
}
