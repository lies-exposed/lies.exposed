{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "target": "esnext",
    "moduleResolution": "bundler",
    "noEmit": false,
    "composite": true,
    "incremental": true,
    "declaration": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "baseUrl": "./src",
    "rootDir": "./src",
    "typeRoots": ["../shared/typings", "./typings"],
    "tsBuildInfoFile": "lib/.tsbuildinfo"
  },
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../shared"
    }
  ],
  "include": [
    "./src",
    "./test",
    "./typings",
    "./src/**/*.json",
    "eslint.config.js"
  ],
  "exclude": ["node_modules", "lib"]
}
