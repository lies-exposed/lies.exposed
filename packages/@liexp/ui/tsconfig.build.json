{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    "noEmit": false,
    "composite": true,
    "declaration": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./lib",
    "baseUrl": "./src",
    "rootDir": "./src",
    "typeRoots": [
      "node_modules/@types",
      "../../../node_modules/@types",
      "../shared/typings",
      "./typings"
    ],
    "tsBuildInfoFile": "lib/tsconfig.tsbuildinfo",
    "paths": {
      "@liexp/core/*": ["../../core/src/*"],
      "@liexp/shared/*": ["../../shared/src/*"]
    }
  },
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../shared"
    }
  ],
  "include": ["./src", "./typings", "./src/**/*.json"],
  "exclude": ["node_modules", "lib"]
}
