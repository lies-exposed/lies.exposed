{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./lib",
    "baseUrl": "./src",
    "rootDir": "./src",
    "tsBuildInfoFile": "lib/.tsbuildinfo"
  },
  "include": ["./src", "./typings", "./src/**/*.json"],
  "exclude": [
    "node_modules",
    "lib",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "test",
    "eslint.config.js"
  ]
}
